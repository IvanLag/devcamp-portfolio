<h1>Portfolio items</h1>

<!-- <a href="portfolios/new">Create new item</a> -->

<%= link_to "Create new item", new_portfolio_path %>

<% @portfolio_items.each do |portfolio_item| %>
<p><%= link_to portfolio_item.titel, portfolio_snow_path(portfolio_item.id) %></p>
<p><%= portfolio_item.sublitel %></p>
<p><%= portfolio_item.body %></p>
<%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %>
<%= link_to "Edit", edit_portfolio_path(portfolio_item.id) %>
<%= link_to  'Delete Portfolio Item', portfolio_snow_path(portfolio_item), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}%>
<% end %>
