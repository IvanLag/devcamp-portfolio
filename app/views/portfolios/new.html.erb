<h1>Create new portfolio item</h1>

<%= form_for(@portfolio_item) do |f| %>
  <div class="field">
    <%= f.label :titel %>
    <%= f.text_field :titel %>
  </div>

  <div class="field">
    <%= f.label :sublitel %>
    <%= f.text_field :sublitel %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>